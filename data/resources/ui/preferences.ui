<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="PreferencesWindow" parent="AdwPreferencesWindow">
        <property name="default-width">550</property>
        <property name="default-height">570</property>
        <property name="can-navigate-back">True</property>
        <child>
            <object class="AdwPreferencesPage">
                <property name="icon-name">applications-system-symbolic</property>
                <property name="title" translatable="yes">General</property>
                <child>
                    <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Formatting</property>
                        <child>
                            <object class="AdwComboRow" id="alpha_pos_box">
                                <property name="title" translatable="yes">Alpha-Value-Position</property>
                                <property name="subtitle" translatable="yes">Where the Alphavalue is positioned in the Hexstring</property>
                                <property name="model">
                                    <object class="GtkStringList">
                                        <items>
                                            <item translatable="yes">None</item>
                                            <item translatable="yes">End</item>
                                            <item translatable="yes">Start</item>
                                        </items>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="AdwComboRow" id="observer_box">
                                <property name="title" translatable="yes">CIE illuminants</property>
                                <property name="subtitle" translatable="yes">Under which conditions are the colors observed</property>
                                <property name="model">
                                    <object class="GtkStringList">
                                        <items>
                                            <item context="ComboRow selection item for color observer" translatable="yes">A (Incandescent/tungsten)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">B (Old direct sunlight at noon)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">C (Old daylight)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">D50 (ICC profile PCS)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">D55 (Mid-morning daylight)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">D65 (Daylight, sRGB, Adobe-RGB)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">D75 (North sky daylight)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">E (Equal energy)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F1 (Daylight Fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F2 (Cool fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F3 (White Fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F4 (Warm White Fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F5 (Daylight Fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F6 (Lite White Fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F7 (Daylight fluorescent, D65 simulator)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F8 (Sylvania F40, D50 simulator)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F9 (Cool White Fluorescent)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F10 (Ultralume 50, Philips TL85)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F11 (Ultralume 40, Philips TL84)</item>
                                            <item context="ComboRow selection item for color observer" translatable="yes">F12 (Ultralume 30, Philips TL83)</item>
                                        </items>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="AdwComboRow" id="observer_degree_box">
                                <property name="title" translatable="yes">CIE standard observer</property>
                                <property name="subtitle" translatable="yes">Field of view used by the CIE standard observer</property>
                                <property name="model">
                                    <object class="GtkStringList">
                                        <items>
                                            <item context="ComboRow selection item for obersver degree" translatable="yes">2°</item>
                                            <item context="ComboRow selection item for obersver degree" translatable="yes">10°</item>
                                        </items>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Name Sets</property>
                                <property name="subtitle" translatable="yes">Which color sets should be used for the names</property>
                                <property name="activatable">True</property>
                                <signal name="activated" handler="on_name_row_activated" swapped="true" />
                                <child type="suffix">
                                    <object class="GtkImage">
                                        <property name="icon-name">go-next-symbolic</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Color Formats</property>
                        <property name="description" translatable="yes">Customize the visible formats and in which order they are displayed.</property>
                        <child type="header-suffix">
                            <object class="GtkButton">
                                <property name="icon-name">edit-clear-symbolic</property>
                                <property name="tooltip-text" translatable="yes" context="Tooltip of the button to reset the format order">Reset Order</property>
                                <signal name="clicked" handler="on_reset_pressed" swapped="true" />
                                <style>
                                    <class name="flat" />
                                </style>
                            </object>
                        </child>
                        <child>
                            <object class="GtkListBox" id="format_list">
                                <property name="selection-mode">none</property>
                                <style>
                                    <class name="boxed-list" />
                                </style>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>