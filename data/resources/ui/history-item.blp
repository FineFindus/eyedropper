using Gtk 4.0;

template $HistoryItem : Button {
  margin-start: 2;
  margin-end: 2;
  margin-top: 2;
  margin-bottom: 2;

  child: Gtk.Box {
    Gtk.GestureClick right_click_gesture {
      button: 3;
      pressed => $show_popover() swapped;
    }

    Gtk.GestureLongPress press_gesture {
      touch-only: true;
      pressed => $show_popover() swapped;
    }

    Gtk.PopoverMenu popover {
      halign: start;
      has-arrow: false;
    }
  };
}
